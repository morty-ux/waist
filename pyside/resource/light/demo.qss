/* ==================== 进度条样式 ==================== */
ProgressBar {
    background-color: #E0E0E0;
    border-radius: 3px;
    height: 6px;
}

ProgressBar::chunk {
    background-color: #00A896;
    border-radius: 3px;
}

/* ==================== 状态徽章样式 ==================== */
InfoBadge {
    border-radius: 4px;
    font-size: 11px;
    padding: 2px 8px;
}

/* ==================== 数字输入框样式 ==================== */
DoubleSpinBox,
SpinBox {
    background-color: #FFFFFF;
    border: 1px solid #B2DFDB;
    border-radius: 4px;
    padding: 4px;
}

DoubleSpinBox:hover,
SpinBox:hover {
    border: 1px solid #00A896;
}

DoubleSpinBox:focus,
SpinBox:focus {
    border: 1px solid #00A896;
    background-color: #F0F8F7;
}

/* ==================== 状态卡片样式 ==================== */
StatusCard {
    background-color: #FFFFFF;
    border: 1px solid #B2DFDB;
    border-radius: 8px;
}

StatusCard TitleLabel {
    color: #00A896;
    font-size: 24px;
    font-weight: bold;
}

/* ==================== 占位界面样式 ==================== */
PlaceholderInterface {
    background-color: #E8F5F3;
}

/* ==================== 主视图背景 ==================== */
#dataMonitorView {
    background-color: #d0fff6;
}
